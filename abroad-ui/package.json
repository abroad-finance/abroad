{
  "name": "abroad-ui",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite --host",
    "build": "npm run generate:api && tsc -b && vite build",
    "lint": "eslint .",
    "preview": "vite preview --host",
    "generate:api": "cd .. && npm i && npm run build && cd abroad-ui && orval --config orval.config.ts",
    "depcruise:tree": "depcruise src --include-only '^src' --config --output-type dot | dot -T svg > dependency-graph.svg && open dependency-graph.svg"
  },
  "dependencies": {
    "@headlessui/react": "^2.2.2",
    "@lordicon/element": "^1.11.0",
    "@lordicon/react": "^1.11.0",
    "@stellar/freighter-api": "^4.1.0",
    "@stellar/stellar-sdk": "^13.3.0",
    "@tailwindcss/vite": "^4.0.9",
    "firebase": "^11.6.0",
    "flag-icons": "^7.3.2",
    "framer-motion": "^12.6.2",
    "lottie-web": "^5.13.0",
    "lucide-react": "^0.485.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-router-dom": "^7.4.0",
    "tailwindcss": "^4.0.9"
  },
  "devDependencies": {
    "@eslint/js": "^9.19.0",
    "@types/react": "^19.0.8",
    "@types/react-dom": "^19.0.3",
    "@vitejs/plugin-react": "^4.3.4",
    "dependency-cruiser": "^16.10.2",
    "eslint": "^9.19.0",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-react-refresh": "^0.4.18",
    "globals": "^16.0.0",
    "orval": "^7.9.0",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.22.0",
    "vite": "^6.1.0"
  }
}
