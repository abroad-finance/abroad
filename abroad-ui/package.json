{
  "name": "abroad-ui",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite --host",
    "build": "npm run generate:api && tsc -b && vite build",
    "build:code": "vite build",
    "lint": "eslint . --fix",
    "preview": "vite preview --host",
    "generate:api": "cd .. && npm i && npx prisma generate && npm run build && cd abroad-ui && orval --config orval.config.ts",
    "depcruise:tree": "depcruise src --include-only '^src' --config --output-type dot | dot -T svg > dependency-graph.svg && open dependency-graph.svg",
    "i18n:compare": "tolgee compare",
    "i18n:sync": "tolgee sync -Y"
  },
  "dependencies": {
    "@creit.tech/stellar-wallets-kit": "^1.8.0",
    "@lordicon/react": "^1.11.0",
    "@stellar/stellar-sdk": "^13.3.0",
    "@tailwindcss/vite": "^4.1.11",
    "@tolgee/react": "^6.2.7",
    "@yudiel/react-qr-scanner": "^2.3.1",
    "axios": "^1.11.0",
    "framer-motion": "^12.23.12",
    "lottie-web": "^5.13.0",
    "lucide-react": "^0.539.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-router-dom": "^7.8.0",
    "tailwindcss": "^4.1.11"
  },
  "devDependencies": {
    "@eslint/js": "^9.33.0",
    "@stylistic/eslint-plugin": "^5.2.3",
    "@tolgee/cli": "^2.14.0",
    "@types/react": "^19.1.10",
    "@types/react-dom": "^19.1.7",
    "@vitejs/plugin-react": "^5.0.0",
    "dependency-cruiser": "^17.0.1",
    "eslint": "^9.33.0",
    "eslint-plugin-perfectionist": "^4.15.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.3.0",
    "orval": "^7.11.2",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.39.1",
    "vite": "^7.1.2",
    "vite-plugin-node-polyfills": "^0.24.0"
  }
}
