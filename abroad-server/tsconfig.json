{
  "compilerOptions": {
    "target": "ESNext",
  "module": "commonjs",
  "moduleResolution": "node",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
  "skipLibCheck": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true,
    "types": [
      "node",
      "jest"
    ]
  },
  "include": [
    "./src/**/*",
  ],
  "exclude": [
    "node_modules",
    "dist",
    "abroad-ui",
    "eslint.config.mjs",
  ],
}