{
  "compilerOptions": {
    "target": "ESNext",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./dist",
    "rootDir": "./",
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true,
    "types": [
      "node",
      "jest"
    ]
  },
  "include": [
    "./src/**/*",
    "scripts/maintainability-report.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "abroad-ui",
    "eslint.config.mjs",
    "src/__tests__/**/*"
  ]
}
