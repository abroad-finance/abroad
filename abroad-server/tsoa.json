{
  "entryFile": "src/app/http/server.ts",
  "noImplicitAdditionalProperties": "throw-on-extras",
  "controllerPathGlobs": [
    "src/modules/**/interfaces/http/**/*Controller.ts"
  ],
  "spec": {
    "outputDirectory": "src/app/http",
    "specVersion": 3,
    "info": {
      "title": "Abroad API Documentation",
      "version": "1.0.0",
      "description": "## API Documentation\n\nHere is the flow diagram:\n\n![Flow Diagram](https://plume-fedora-ef6.notion.site/Proposed-flow-17a7719a7efe80d8874be944736107f6)"
    },
    "securityDefinitions": {
      "ApiKeyAuth": {
        "type": "apiKey",
        "in": "header",
        "name": "X-API-Key"
      },
      "BearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    },
    "security": [
      {
        "ApiKeyAuth": []
      },
      {
        "BearerAuth": []
      }
    ]
  },
  "routes": {
    "routesDir": "src/app/http",
    "authenticationModule": "./src/app/http/authentication.ts",
    "iocModule": "./src/app/container/index.ts"
  }
}
