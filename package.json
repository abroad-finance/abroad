{
  "name": "abroad-monorepo",
  "private": true,
  "version": "1.0.0",
  "description": "Monorepo for Abroad: server + UI",
  "workspaces": [
    "abroad-server",
    "abroad-ui"
  ],
  "scripts": {
    "dev:server": "npm --prefix abroad-server run dev",
    "build:server": "npm --prefix abroad-server run build",
    "start:server": "npm --prefix abroad-server run start",
    "migrate:dev": "npm --prefix abroad-server run migrate:dev",
    "dev:ui": "npm --prefix abroad-ui run dev",
    "build:ui": "npm --prefix abroad-ui run build",
    "format": "npm --prefix abroad-server run format && npm --prefix abroad-ui run lint"
  }
}

